/* To learn more about this file see: httph://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": ["ES2022", "dom"],
    "paths": {
      "@view/public/components": ["./src/app/views/public/components/index.ts"],
      "@view/admin/components": ["./src/app/views/admin/components/index.ts"],
      "@shared/types": ["./src/app/shared/types/index.ts"],
      "@shared/schemas": ["./src/app/shared/schemas/index.ts"],
      "@shared/interfaces": ["./src/app/shared/interfaces/index.ts"],
      "@core/http": ["./src/app/core/http/index.ts"],
      "@core/interfaces": ["./src/app/core/interfaces/index.ts"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
